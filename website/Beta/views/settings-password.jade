include userMenuMixin
extends layout

block headerContent
    // logged in user menu
    +userMenuMixin(null)
    
block mainContent 
   article.jumbotron.col-md-12
    section.col-md-12
        ul.nav.nav-tabs
            li
                a(href='#') Personal
            li.active
                a(href='#') Password
        
        div
            p.  Change Password

            form(method="POST", action="#")

                .form-group
                    label(for="id_currPass") Current Password:
                    input.form-control(type="password", placeholder="password", name="currentPass", required="")

                .form-group
                    label(for="id_newPass") New Password:
                    input.form-control(type="password", placeholder="password", name="newPass", required="")

                .form-group
                    label(for="id_confirmNewPass") Confirm New Password:
                    input.form-control(type="password", placeholder="password", name="confirmNewPass", required="")

                button.btn.btn-default(id="doChangePass") Submit
