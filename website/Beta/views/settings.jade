include userMenuMixin
extends layout

block headerContent
    // logged in user menu
    +userMenuMixin(null)
    
block mainContent 
  div.bs-example.bs-example-tabs
    ul#myTab.nav.nav-tabs
      li
        a(href='#home', data-toggle='tab') Profile
      li.active
        a(href='#profile', data-toggle='tab') Password
    div#myTabContent.tab-content
      div#home.tab-pane.fade
        article.jumbotron.col-md-12
          section.col-md-12
            div
              p Personal Information
              form(method='POST', action='#')
                div.form-group
                  label First Name 
                  input.form-control(type='text', placeholder='First Name', name='fname', required='')
                div.form-group
                  label Middle Name:
                  input.form-control(type='text', placeholder='Middle Name', name='mname', required='')
                div.form-group
                  label Last Name
                  input.form-control(type='text', placeholder='Last Name', name='lname', required='')
                button.btn.btn-default Submit
      div#profile.tab-pane.fade.active.in
        article.jumbotron.col-md-12
          section.col-md-12
            div
              p Change Password
              form(method='POST', action='#')
                div.form-group
                  label(for='id_currPass') Current Password:
                  input.form-control(type='password', placeholder='password', name='currentPass', required='')
                div.form-group
                  label(for='id_newPass') New Password:
                  input.form-control(type='password', placeholder='password', name='newPass', required='')
                div.form-group
                  label(for='id_confirmNewPass') Confirm New Password:
                  input.form-control(type='password', placeholder='password', name='confirmNewPass', required='')
                button#doChangePass.btn.btn-default Submit
