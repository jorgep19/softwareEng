include userMenuMixin
extends layout

block headerContent
    // logged in user menu
    +userMenuMixin(null)

block mainContent
  article.jumbotron.col-md-12
    section.col-md-12
      ul.nav.nav-tabs
        li.active
          a(href='#') Personal
        li
          a(href='#') Password
      div
        p Personal Information
        form(method='POST', action='#')
          div.form-group
            label First Name 
            input.form-control(type='text', placeholder='First Name', name='fname', required='')
          div.form-group
            label Middle Name:
            input.form-control(type='text', placeholder='Middle Name', name='mname', required='')
          div.form-group
            label Last Name
            input.form-control(type='text', placeholder='Last Name', name='lname', required='')
          button.btn.btn-default Submit
